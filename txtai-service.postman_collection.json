{
  "info": {
    "name": "txtai Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Service Status",
      "request": {
        "method": "GET",
        "url": "http://localhost:8000/"
      }
    },
    {
      "name": "Stream Operations",
      "item": [
        {
          "name": "Start Stream Listener",
          "request": {
            "method": "POST",
            "url": "http://localhost:8000/api/stream/start"
          }
        },
        {
          "name": "Stop Stream Listener",
          "request": {
            "method": "POST",
            "url": "http://localhost:8000/api/stream/stop"
          }
        },
        {
          "name": "Stream Status",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/api/stream/status"
          }
        }
      ]
    },
    {
      "name": "RAG Operations",
      "item": [
        {
          "name": "Query RAG",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "http://localhost:8000/api/rag/query",
            "body": {
              "mode": "raw",
              "raw": {
                "query": "What is artificial intelligence?",
                "limit": 3
              }
            }
          }
        }
      ]
    },
    {
      "name": "Embeddings Operations",
      "item": [
        {
          "name": "Generate Embedding",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "http://localhost:8000/api/embeddings/embed",
            "body": {
              "mode": "raw",
              "raw": {
                "text": "Test document for embedding"
              }
            }
          }
        }
      ]
    },
    {
      "name": "LLM Operations",
      "item": [
        {
          "name": "Complete Text",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "http://localhost:8000/api/llm/complete",
            "body": {
              "mode": "raw",
              "raw": {
                "prompt": "What is the capital of France?",
                "system": "You are a helpful AI assistant."
              }
            }
          }
        }
      ]
    }
  ]
}
