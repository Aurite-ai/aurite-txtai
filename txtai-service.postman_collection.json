{
  "info": {
    "name": "txtai Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Service Status",
      "request": {
        "method": "GET",
        "url": "{{BASE_URL}}/",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{API_KEY}}"
          }
        ]
      }
    },
    {
      "name": "Stream Operations",
      "item": [
        {
          "name": "Start Stream Listener",
          "request": {
            "method": "POST",
            "url": "{{BASE_URL}}/api/stream/start",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"
              }
            ]
          }
        },
        {
          "name": "Stop Stream Listener",
          "request": {
            "method": "POST",
            "url": "{{BASE_URL}}/api/stream/stop",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"
              }
            ]
          }
        },
        {
          "name": "Stream Status",
          "request": {
            "method": "GET",
            "url": "{{BASE_URL}}/api/stream/status",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "RAG Operations",
      "item": [
        {
          "name": "Query RAG",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{BASE_URL}}/api/rag/query",
            "body": {
              "mode": "raw",
              "raw": {
                "query": "What is artificial intelligence?",
                "limit": 3
              }
            }
          }
        }
      ]
    },
    {
      "name": "Embeddings Operations",
      "item": [
        {
          "name": "Generate Embedding",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{BASE_URL}}/api/embeddings/embed",
            "body": {
              "mode": "raw",
              "raw": {
                "text": "Test document for embedding"
              }
            }
          }
        }
      ]
    },
    {
      "name": "LLM Operations",
      "item": [
        {
          "name": "Complete Text",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{BASE_URL}}/api/llm/complete",
            "body": {
              "mode": "raw",
              "raw": {
                "prompt": "What is the capital of France?",
                "system": "You are a helpful AI assistant."
              }
            }
          }
        }
      ]
    }
  ]
}
